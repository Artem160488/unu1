{
  "name": "unu-electron-demo",
  "version": "1.0.0",
  "description": "Electron demo that asks for Chrome path and runs puppeteer-core tasks",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win --x64"
  },
  "build": {
    "appId": "com.example.unu-electron-demo",
    "productName": "unu-electron-demo",
    "files": [
      "src/**/*",
      "tasks.json",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    }
  },
  "dependencies": {
    "express": "^4.18.2",
    "open": "^9.1.0",
    "puppeteer-core": "^21.5.0"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0"
  }
}